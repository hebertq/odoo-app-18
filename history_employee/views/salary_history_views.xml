<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- List view of salary.history model. -->
    <record id="salary_history_view_tree" model="ir.ui.view">
        <field name="name">salary.history.view.list</field>
        <field name="model">salary.history</field>
        <field name="arch" type="xml">
            <list string="Salary History">
                <field name="employee" column_invisible="True"/>
                <field name="employee_name" column_invisible="True"/>
                <field name="updated_date"/>
                <field name="current_value"/>
            </list>
        </field>
    </record>
</odoo>
