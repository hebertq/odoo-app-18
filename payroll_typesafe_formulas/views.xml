<odoo>
    
    <record id="view_payslip_general_formula_tree" model="ir.ui.view">
        <field name="name">view_payslip_general_formula_tree</field>
        <field name="model">hr.payslip.general.formula</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="code" />
                <field name="result_type" />
                <field name="python_code" invisible="1" />
            </list>
        </field>
    </record>
    
    <record id="view_payslip_general_formula_form" model="ir.ui.view">
        <field name="name">view_payslip_general_formula_form</field>
        <field name="model">hr.payslip.general.formula</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="code" />
                    <field name="result_type" />
                    <field name="dependencies" />
                    <field name="python_code" />
                </group>
            </form>
        </field>
    </record>
    
    
    
    <record id="action_payslip_general_formula" model="ir.actions.act_window">
        <field name="name">Other Payslip Formulas</field>
        <field name="res_model">hr.payslip.general.formula</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    
    <menuitem id="menu_payslip_general_formula"
              action="action_payslip_general_formula"
              parent="hr_payroll_community.menu_hr_payroll_community_configuration"
              sequence="13"
              groups="base.group_system"
              />
    
</odoo>
